<div class="row">
  <% @posts.each do |post| %>
    <div class="col-md-6">
      <div class="post">
        <%= image_tag post.image.url, width: '50%' %>
        <div class="post-content">
          <h3><%= post.title %></h3>
          <small>Post by:<%= post.user.name %> On <%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></small>
          <%= raw post.body.truncate(200) %>
          <%= link_to 'Read More', post_path(post), class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>   
  <% end %>
</div>